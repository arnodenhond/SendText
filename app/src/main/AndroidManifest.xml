<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="arnodenhond.sendtext">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_insert_comment_black_48dp"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".SendText" android:noHistory="true" android:excludeFromRecents="true"/>
        <activity android:name=".Info" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.INFO" />
            </intent-filter>
        </activity>
        <activity android:name="arnodenhond.sendtext.Launcher" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".STTileService"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
    </application>

</manifest>